<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:BUG_Popup_MAUI_Community_Toolkit"
             x:Class="BUG_Popup_MAUI_Community_Toolkit.App"
             xmlns:localConverter="clr-namespace:BUG_Popup_MAUI_Community_Toolkit.Converters;assembly=BUG_Popup_MAUI_Community_Toolkit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <localConverter:RatioConverter x:Key="RatioConverter095" Coefficient="0.95" />
            <localConverter:RatioConverter x:Key="RatioConverter050" Coefficient="0.50" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
